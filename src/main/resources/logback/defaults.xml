<included>
    <!-- application.yaml property 가져오기 -->
    <springProperty name="APP_NAME" source="spring.application.name" defaultValue="NONE"/>
    <springProperty name="APP_VERSION" source="info.app.version" defaultValue="0.0.1"/>

    <springProperty name="LOG_PATH" source="logging.file.path" defaultValue="logs"/>
    <springProperty name="LOG_FILE_PREFIX" source="spring.application.name" defaultValue="server"/>
    <!--<springProperty name="LOG_FILE_SUFFIX" source="logging.file.suffix" defaultValue=""/>-->

    <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p ${PID:-} --- %esb(){APPLICATION_NAME}%esb{APPLICATION_GROUP}[%15.15t] ${LOG_CORRELATION_PATTERN:-}%-40.40logger{39} : %m%n%wEx"/>
    <property name="CONSOLE_LOG_CHARSET" value="${CONSOLE_LOG_CHARSET:-${file.encoding:-UTF-8}}"/>
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p ${PID:-} --- %esb(){APPLICATION_NAME}%esb{APPLICATION_GROUP}[%t] ${LOG_CORRELATION_PATTERN:-}%-40.40logger{39} : %m%n%wEx"/>
    <property name="FILE_LOG_CHARSET" value="${FILE_LOG_CHARSET:-${file.encoding:-UTF-8}}"/>
    <property name="QUERY_LOG_PATTERN" value="${QUERY_LOG_PATTERN:-%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_CORRELATION_PATTERN:-} : %m%n%wEx}"/>

    <property name="ROOT_LOG_LEVEL" value="${ROOT_LOG_LEVEL:-DEBUG}"/>
    <property name="SERVICE_LOG_LEVEL" value="${SERVICE_LOG_LEVEL:-TRACE}"/>
    <property name="ERROR_LOG_THRESHOLD" value="${ERROR_LOG_THRESHOLD:-ERROR}"/>

    <include resource="logback/console-appender.xml"/>
    <!--<include resource="logback/logstash-console-appender.xml"/>-->
    <include resource="logback/file-appender.xml"/>
    <include resource="logback/file-error-appender.xml"/>
    <include resource="logback/file-query-appender.xml"/>

	<logger name="org.apache.catalina.startup.DigesterFactory" level="ERROR"/>
	<logger name="org.apache.catalina.util.LifecycleBase" level="ERROR"/>
	<logger name="org.apache.coyote.http11.Http11NioProtocol" level="WARN"/>
	<logger name="org.apache.sshd.common.util.SecurityUtils" level="WARN"/>
	<logger name="org.apache.tomcat.util.net.NioSelectorPool" level="WARN"/>
	<logger name="org.eclipse.jetty.util.component.AbstractLifeCycle" level="ERROR"/>
	<logger name="org.hibernate.validator.internal.util.Version" level="WARN"/>
	<logger name="org.springframework.boot.actuate.endpoint.jmx" level="WARN"/>
</included>